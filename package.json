{
    "name": "webcell-scaffold",
    "version": "0.4.0",
    "private": true,
    "description": "App Project scaffold of WebCell v2",
    "keywords": [
        "web-component",
        "typescript",
        "jsx",
        "web-cell"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/scaffold.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/scaffold/issues"
    },
    "main": "src/index.html",
    "dependencies": {
        "boot-cell": "^1.9.0",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.3",
        "classnames": "^2.2.6",
        "koajax": "^0.6.4",
        "mobx": "5.15.7",
        "mobx-web-cell": "^0.3.4",
        "web-cell": "^2.3.0-beta.4",
        "web-utility": "^2.2.2"
    },
    "devDependencies": {
        "@types/node": "^14.14.16",
        "autoprefixer": "^9.8.6",
        "husky": "^4.3.6",
        "less": "^4.0.0",
        "lint-staged": "^10.5.3",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3",
        "workbox-cli": "^6.0.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml,js,ts,tsx}": "prettier --write"
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "test": "lint-staged",
        "start": "parcel src/index.html --open",
        "pack-dist": "parcel build src/index.html --public-url .",
        "pack-sw": "rm -f dist/sw.js.map  &&  workbox generateSW",
        "build": "rm -rf dist/  &&  npm run pack-dist  &&  npm run pack-sw"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
