{
    "name": "webcell-scaffold",
    "version": "0.3.0",
    "private": true,
    "description": "App Project scaffold of WebCell v2",
    "keywords": [
        "web-component",
        "typescript",
        "jsx",
        "web-cell"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/scaffold.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/scaffold/issues"
    },
    "main": "src/index.html",
    "dependencies": {
        "boot-cell": "^1.3.0",
        "bootstrap-icons": "^1.1.0",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.1",
        "classnames": "^2.2.6",
        "koajax": "^0.6.4",
        "mobx": "5.15.7",
        "mobx-web-cell": "^0.3.2",
        "web-cell": "^2.2.0",
        "web-utility": "^1.8.2"
    },
    "devDependencies": {
        "autoprefixer": "^9.8.6",
        "husky": "^4.3.0",
        "less": "^3.12.2",
        "lint-staged": "^10.5.1",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.1.2",
        "typescript": "^4.0.5",
        "workbox-cli": "^4.3.1"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml,js,ts,tsx}": "prettier --write"
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "test": "lint-staged",
        "start": "workbox generateSW  &&  parcel src/index.html --open",
        "pack-dist": "parcel build src/index.html --public-url .",
        "pack-sw": "rm -f dist/sw.js.map  &&  workbox generateSW",
        "build": "rm -rf dist/  &&  npm run pack-dist  &&  npm run pack-sw"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
